<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="370" Margin="288,19,0,0" VerticalAlignment="Top" Width="491" AutoGenerateColumns="false" ItemsSource="{Binding VMDeamons}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Process name" Binding="{Binding ProcessName}"/>
                <DataGridTextColumn Header="Proces progress" Binding="{Binding Progress}"/>
                <DataGridTextColumn Header="Is active" Binding="{Binding IsRunning}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ProgressBar HorizontalAlignment="Center" Height="17" Margin="0,407,0,0" VerticalAlignment="Top" Width="758"/>
        <Button x:Name="StartButton" Content="Button" HorizontalAlignment="Left" Height="25" Margin="21,165,0,0" VerticalAlignment="Top" Width="249" Click="StartButton_Click"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="100,47,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="20" Margin="21,22,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="249"/>

    </Grid>
</Window>
