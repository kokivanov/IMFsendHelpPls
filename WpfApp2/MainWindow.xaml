<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:secondaryNamespace="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions">
    <Grid x:Name="WN" Background="#FF1D1D1D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="709*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <DataGrid secondaryNamespace:Name="Datagrid" HorizontalAlignment="Left" Height="368" Margin="270,21,0,0" VerticalAlignment="Top" Width="449" AutoGenerateColumns="false" ItemsSource="{Binding VMDeamons}" Grid.ColumnSpan="2" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Process name" Binding="{Binding ProcessName}"/>
                <DataGridTextColumn Header="Proces progress" Binding="{Binding Progress, StringFormat=\{0\}%}"/>
                <DataGridTextColumn Header="Is active" Binding="{Binding IsRunning}"/>
                <DataGridTextColumn Header="Found" Binding="{Binding Found}"/>
                <DataGridTextColumn Header="Start point" Binding="{Binding StartPoint, StringFormat=\{0\}}"/>
                <DataGridTextColumn Header="End point" Binding="{Binding EndPoint, StringFormat=\{0\}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ProgressBar secondaryNamespace:Name="ProgressBarKek" HorizontalAlignment="Left" Height="22" Margin="270,402,0,0" VerticalAlignment="Top" Width="449" Grid.Column="1" Cursor="Arrow" MouseDoubleClick="ProgressBarKek_MouseDoubleClick" Value="{Binding OverallProgress}" Foreground="#FF29A036" Orientation="Horizontal" SmallChange="1" Background="{secondaryNamespace:Null}" Grid.ColumnSpan="2"/>
        <Button secondaryNamespace:Name="StartButton" Content="🔍" HorizontalAlignment="Left" Height="23" Margin="210,164,0,0" VerticalAlignment="Top" Width="32" Click="StartButton_Click" Grid.Column="1"/>
        <TextBox secondaryNamespace:Name="PathTextBox" HorizontalAlignment="Left" Height="20" Margin="30,103,0,0" TextWrapping="Wrap" Text="{Binding FilePathTextBox}" VerticalAlignment="Top" Width="228" IsEnabled="{Binding FilePathTextBoxIsUnlocked}" Grid.ColumnSpan="2"/>
        <Button secondaryNamespace:Name="ChooseFileButton_Copy" Content="..." HorizontalAlignment="Left" Margin="210,103,0,0" VerticalAlignment="Top" Width="32" Click="ChooseFileButton_Copy_Click" Grid.Column="1" Height="25"/>
        <Image Margin="10,10,1,376" Source="/Image1.png" Stretch="Fill" RenderTransformOrigin="0.127,0.115"/>
        <Label Content="Choose Your File:" HorizontalAlignment="Left" Height="24" Margin="10,74,0,0" VerticalAlignment="Top" Width="100" Foreground="#FFF7F6F6" Grid.ColumnSpan="2"/>
        <Label Content="Progress:" HorizontalAlignment="Left" Height="28" Margin="205,399,0,0" VerticalAlignment="Top" Width="60" Foreground="#FFFBF6F6" Grid.Column="1"/>
        <Label Content="Find in The file:" HorizontalAlignment="Left" Height="23" Margin="21,136,0,0" VerticalAlignment="Top" Width="89" Background="#FF1D1D1D" Foreground="#FFF7EBEB" Grid.ColumnSpan="2"/>
        <TextBox secondaryNamespace:Name="SearchWordTextBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="30,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224" Text="{Binding SearchedWord}"/>
        <Label secondaryNamespace:Name="label" Grid.Column="1" Content="{Binding DBGInfo}" HorizontalAlignment="Left" Margin="65,250,0,0" VerticalAlignment="Top" Foreground="White"/>
    </Grid>
</Window>